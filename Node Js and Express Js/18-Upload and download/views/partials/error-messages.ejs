<% if(typeof errorMessages !=='undefined' && errorMessages && errorMessages.length > 0){ %>
  <div class="bg-red-50 border border-red-400 rounded-lg p-4 mb-4">
    <ul class="list-disc list-inside space-y-1 text-red-600">
      <% errorMessages.forEach(errorMessage => { %>
        <li class="text-sm"><%=errorMessage%></li>
      <% }) %>
    </ul>
  </div>
 <% } %>