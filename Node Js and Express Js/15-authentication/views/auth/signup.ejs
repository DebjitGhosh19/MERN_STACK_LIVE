<%- include('../partials/head')%>
</head>
<body class="bg-blue-50 min-h-screen">
    <%- include('../partials/nav') %> 
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-center pb-2 text-3xl font-bold text-blue-600">signup here</h1>
    <form action='/signup' method="post" class="max-w-md mx-auto space-y-6">
      <div class="space-y-2">
        <%- include('../partials/error-messages')%>
        <input 
          type="text" 
          name="firstName" 
          value="<%= typeof oldInput !== 'undefined' ? oldInput.firstName : '' %>"
          placeholder="Enter Your First Name" 
          class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
     
        >
        <input 
        type="text" 
        name="lastName" 
        value="<%= typeof oldInput !== 'undefined' ? oldInput.lastName :'' %>"
        placeholder="Enter Your Last Name" 
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
        
      >
        <input 
        type="email" 
        name="email" 
        value="<%= typeof oldInput !== 'undefined' ? oldInput.email :'' %>"
        placeholder="Enter your email" 
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
     
      >
        <input 
        type="password" 
        name="password" 
        value="<%= typeof oldInput !== 'undefined' ? oldInput.password :'' %>"
        placeholder="Enter your password" 
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
       
      >
      <input 
        type="password" 
        name="confirm_password" 
        placeholder="Confirm  your password" 
         value="<%= typeof oldInput !== 'undefined' ? oldInput.confirm_password :'' %>"
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
       
      >
       <div class="mb-4">
          <p class="text-gray-700 mb-2">User Type:</p>
          <div class="flex space-x-4">
            <label class="flex items-center">
              <input 
                type="radio" 
                name="userType" 
                value="guest"
                class="mr-2"
                <%= typeof oldInput !== 'undefined' && oldInput.userType === 'guest' ? 'checked' : '' %>
              />
              <span class="text-gray-700">Guest</span>
            </label>
            <label class="flex items-center">
              <input 
                type="radio" 
                name="userType" 
                value="host"
                class="mr-2"
                <%= typeof oldInput !== 'undefined' && oldInput.userType === 'host' ? 'checked' : '' %>
              />
              <span class="text-gray-700">Host</span>
            </label>
          </div>
        </div>
      <div class="flex items-center space-x-2">
        <input 
          type="checkbox" 
          name="terms" 
          id="terms" 
          class="rounded border-blue-200 text-blue-500 focus:ring-blue-200"
          
        >
        <label for="terms" class="text-sm text-gray-700">
          I agree to the Terms and Conditions
        </label>
      </div>
      <button 
      type="submit" 
      class="w-full bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition-colors duration-200"
    >Signup
    </button>
      </div>
      
    </form>
  </main>
</body>
</html>