<%- include('../partials/head')%>
</head>
<body class="bg-blue-50 min-h-screen">
    <%- include('../partials/nav') %> 
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-center pb-2 text-3xl font-bold text-blue-600"><%= editing ? "Edit" : "Add"%> your home here</h1>
    <form action='/host/<%= editing ? "editHome" : "add-home"%>' method="post" class="max-w-md mx-auto space-y-6">
      <div class="space-y-2">
       <input type="hidden" name="id" value="<%=editing?home.id:''%>">
        <input 
          type="text" 
          name="houseName" 
          value="<%=editing?home.houseName:''%>"
          placeholder="Enter your house name" 
          class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
          required
        >
        <input 
          type="text" 
          name="rent" 
          value="<%=editing?home.rent:''%>"
          placeholder="Dailey rent of your house" 
          class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
          required
        >
        <input 
          type="text" 
          name="location" 
          value="<%=editing?home.location:''%>"
          placeholder="where is your house" 
          class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
          required
        >
        <input 
          type="text" 
          name="rating" 
          value="<%=editing?home.rating:''%>"
          placeholder="Rating of the house" 
          class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
          required
        >
        <input 
          type="text" 
          name="photoUrl" 
          value="<%=editing?home.photoUrl:''%>"
          placeholder="Upload a photo" 
          class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
          required
        >
       
      </div>
      <button 
        type="submit" 
        class="w-full bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors duration-200"
      ><%= editing ? "Update" : "Add Home"%>
      </button>
    </form>
  </main>
</body>
</html>