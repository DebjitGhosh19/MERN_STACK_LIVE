<%- include('../partials/head')%>
</head>
<body class="bg-gradient-to-br from-sky-50 to-blue-100 min-h-screen">
  <%- include('../partials/nav') %>
  <main class="container mx-auto px-4 py-16">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-6xl font-extrabold text-sky-800 text-center mb-12 tracking-tight">
        Discover Your Perfect Home
      </h1>

      <ul class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <% homes.forEach(home => { %>
          <li class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-56 object-cover">
            <div class="p-6">
              <h2 class="text-2xl font-bold text-gray-800 mb-3"><%= home.houseName %></h2>
              <p class="text-gray-600 mb-4 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2 text-sky-500">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>
                <%= home.location %>
              </p>
              <div class="flex items-center mb-4">
                <span class="text-yellow-400 mr-2 text-xl">â˜…</span>
                <span class="text-gray-700 font-medium"><%= home.rating %></span>
              </div>
              <div class="flex items-center justify-between">
                <span class="flex items-baseline">
                  <span class="text-2xl font-bold text-sky-600">Rs <%= home.rent %></span>
                  <span class="ml-2 text-sm font-medium text-gray-500">per night</span>
                </span>
                <div class="flex items-center gap-3">
                  <%- include('../partials/favourites',{home:home})%>
                  <a href="/homes/<%=home.id%>" 
                     class="bg-sky-600 text-white px-6 py-2.5 rounded-lg hover:bg-sky-700 transition-colors duration-300 font-semibold shadow-md hover:shadow-lg">
                    Details
                  </a>
                </div>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </main>
</body>
</html>