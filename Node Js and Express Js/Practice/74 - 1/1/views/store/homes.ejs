<%- include('../partials/head')%>
</head>
<body class="bg-gradient-to-br from-sky-100 to-blue-100 min-h-screen">
  <%- include('../partials/nav') %>
  <main class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-5xl font-bold text-sky-800 text-center mb-4">
        Here are all homes
      </h1>

      <ul class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% homes.forEach(home => { %>
          <li class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h2>
              <p class="text-gray-600 mb-2 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>
                <%= home.location %>
              </p>
              <div class="flex items-center mb-2">
                <span class="text-yellow-500 mr-1">â˜…</span>
                <span class="text-gray-700"><%= home.rating %></span>
              </div>
              <p class="flex items-center justify-between text-lg font-bold text-sky-600">
                <span class="flex items-baseline">
                  Rs-<%= home.rent %> 
                  <span class="ml-1 text-sm font-normal text-gray-500">per night</span>
                </span>
                <a href="/homes/<%=home.id%>" class="bg-sky-600 text-white px-4 py-2 rounded-md hover:bg-sky-700 transition-colors">
                  Details
                </a>
              </p>

            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </main>
</body>
</html>