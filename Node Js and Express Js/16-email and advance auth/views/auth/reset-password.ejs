<%- include('../partials/head')%>
</head>
<body class="bg-blue-50 min-h-screen">
    <%- include('../partials/nav') %> 
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-center pb-2 text-3xl font-bold text-blue-600">Reset Password</h1>
    <form action='/reset-password' method="post" class="max-w-md mx-auto space-y-6">
      <div class="space-y-2">
        <%- include('../partials/error-messages')%>
       
        <input 
        type="email" 
        name="email" 
        disabled
        value="<%=email %>"
         class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
     
       >
       <input 
       type="text" 
       name="otp" 
       placeholder=" OTP"
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
    
      >
        <input 
        type="password" 
        name="password" 
        placeholder="Enter your New password" 
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
       
       >
       <input 
        type="password" 
        name="confirm_password" 
        placeholder="Confirm  your password" 
        
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
       
        >
      
     
       
      
      <button 
      type="submit" 
      class="w-full bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition-colors duration-200"
      >Save
      </button>
      </div>
      
    </form>
  </main>
</body>
</html>