<%- include('../partials/head')%>
</head>
<body class="bg-blue-50 min-h-screen">
    <%- include('../partials/nav') %> 
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-center pb-2 text-3xl font-bold text-blue-600">signup here</h1>
    <form action='/signup' method="post" class="max-w-md mx-auto space-y-6">
      <div class="space-y-2">
        <%- include('../partials/error-messages')%>
        <input 
          type="text" 
          name="firstName" 
          value="<%= typeof oldInput !== 'undefined' ? oldInput.firstName : '' %>"
          placeholder="Enter Your First Name" 
          class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
     
        >
        <input 
        type="text" 
        name="lastName" 
        value="<%= typeof oldInput !== 'undefined' ? oldInput.lastName :'' %>"
        placeholder="Enter Your Last Name" 
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
        
      >
        <input 
        type="email" 
        name="Email" 
        value="<%= typeof oldInput !== 'undefined' ? oldInput.Email :'' %>"
        placeholder="Enter your Email" 
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
     
      >
        <input 
        type="password" 
        name="Password" 
        value="<%= typeof oldInput !== 'undefined' ? oldInput.Password :'' %>"
        placeholder="Enter your Password" 
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
       
      >
      <input 
        type="password" 
        name="confirm_password" 
        placeholder="Confirm  your Password" 
         value="<%= typeof oldInput !== 'undefined' ? oldInput.confirm_password :'' %>"
        class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
       
      >
      <div class="space-y-2">
        <label class="block text-gray-700">Select User Type:</label>
        <select name="userType" class="w-full px-4 py-2 rounded-lg border border-blue-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200" >
          <option value="">Choose your role</option>
          <option value="host" <%= typeof oldInput !== 'undefined' && oldInput.userType === 'host' ? 'selected' : '' %>>Host</option>
          <option value="guest" <%= typeof oldInput !== 'undefined' && oldInput.userType === 'guest' ? 'selected' : '' %>>Guest</option>
        </select>
      </div>
      <div class="flex items-center space-x-2">
        <input 
          type="checkbox" 
          name="terms" 
          id="terms" 
          class="rounded border-blue-200 text-blue-500 focus:ring-blue-200"
          
        >
        <label for="terms" class="text-sm text-gray-700">
          I agree to the Terms and Conditions
        </label>
      </div>
      <button 
      type="submit" 
      class="w-full bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition-colors duration-200"
    >Signup
    </button>
      </div>
      
    </form>
  </main>
</body>
</html>