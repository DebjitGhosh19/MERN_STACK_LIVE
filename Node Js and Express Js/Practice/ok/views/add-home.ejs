<%- include('partial/head')%>
</head>
<body >
    <%- include('partial/nav') %>
    <main >
        <div class="bg-white/90 backdrop-blur-sm p-8 rounded-2xl shadow-xl ">
            <form action="/host/add-home" method="post" class="space-y-8">
                <h1 class="text-4xl font-bold text-sky-800 text-center mb-8 relative">
                    Register Your Home
                    <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-sky-500 rounded-full"></div>
                </h1>
                
                <div class="space-y-2">
                    <label for="houseName" class="block text-sm font-medium text-gray-700">Home Name</label>
                    <input type="text" 
                           id="houseName"
                           name="houseName" 
                           placeholder="Enter your home's name" 
                           class="w-full px-4 py-3 rounded-lg border border-sky-200 focus:outline-none focus:border-sky-500 focus:ring-2 focus:ring-sky-200 transition-all duration-300 placeholder:text-gray-400"
                    />
                </div>
                
                <button type="submit" 
                        class="w-full bg-gradient-to-r from-sky-500 to-blue-600 text-white font-semibold py-4 px-6 rounded-lg hover:from-sky-600 hover:to-blue-700 transition duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                    Submit
                </button>
            </form>
        </div>
    </main>
</body>
</html>